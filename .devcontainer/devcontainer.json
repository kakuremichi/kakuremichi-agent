{
  "name": "kakuremichi-agent",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "golang.go",
        "Anthropic.claude-code",
        "openai.chatgpt"
      ],
      "settings": {
        "go.useLanguageServer": true,
        "go.toolsManagement.autoUpdate": true,
        "gopls": {
          "ui.semanticTokens": true
        }
      }
    }
  },
  "runArgs": [
    "--cap-add=NET_ADMIN",
    "--cap-add=SYS_MODULE"
  ],
  "postCreateCommand": "go mod download",
  "remoteUser": "vscode"
}
